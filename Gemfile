source 'https://rubygems.org'


gem 'rails', '4.2.5.2'
gem 'sqlite3'
gem 'sass-rails', '~> 5.0'
gem 'uglifier', '>= 1.3.0'
gem 'coffee-rails', '~> 4.1.0'
gem 'jquery-rails'
gem 'turbolinks'
#we will generate a json array using jbuilder using this tool for people
gem 'jbuilder', '~> 2.0' 
gem 'sdoc', '~> 0.4.0', group: :doc

# rspec is the main testing framework
gem 'rspec-rails', :group => [:test, :development]
group :test do
	# factory girl is the replacement for fixtures
	gem 'factory_girl_rails'
	# capybara is used to simulate fields 
	gem 'capybara'
	# guard-rspec allows writing and running tests
	gem 'guard-rspec'
  gem 'byebug'
end

group :development do
  gem 'web-console', '~> 2.0'
  gem 'spring'
end

